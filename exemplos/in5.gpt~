algoritmo declaracao_de_variaveis;

função soma(x: inteiro, y: inteiro) : inteiro
  res : lógico;
  início
  x:=20;
  y:=1;
  res:=verdadeiro;
  retorne x;
  fim
  
função soma2(x: inteiro, y: inteiro) : lógico
  res : lógico;
  início
  x:=10; 
  y:=11;
  res := x>y; 
  retorne res;
  fim

função atualizaGlobal(num:inteiro) : lógico
	global:inteiro;
	res :lógico;
	início
	global := num; 
	res := global = num; 
	retorne res;
	fim

