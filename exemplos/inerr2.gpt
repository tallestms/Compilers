algoritmo idade;

variáveis
	idade : inteiro;
	nome : literal;
	x: inteiro;
fim-variáveis

início
	idade:=18;
	imprima("Digite seu nome:");
	leia(nome); //deveria inicializar nome
	se (idade >= 18) então
		se (idade < 60) então
			imprima("adulto!");
		senão
			imprima("ancião");
		fim-se
	senão
		imprima("menor");
	fim-se
	
	// Exemplo de uso de SWITCH
	imprima("Por favor escreva um número de 1 a 4:\n");
	leia(x);
	x:=1;
	seleciona (x)
		caso (1):
			imprima("O número impresso foi 1.\n);
			parar;
		caso (2):
			imprima("O número impresso foi 2.\n");
			parar;
		caso (3):
			imprima("O número impresso foi 3.\n");
		caso (4):
			imprima("O número impresso foi 4.\n");
			parar;
		padrão:
			parar;
	fim-seleciona
	
fim
