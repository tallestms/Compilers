algoritmo fatorial;

variáveis
	res : inteiro;
	fat : real;
	x : inteiro;
fim-variáveis

início
	// Exemplo de WHILE
	//imprima("Primeira versão do programa fatorial. Digite um número:");
	//x := leia();
	fat := 7.0;
	x := 1;
	res := 2;
	enquanto (x <> 0) faça
		res := res * x;
		x := x - 1;
	fim-enquanto
	//imprima("fatorial de ",fat," é igual a ",res);
	
	// Exemplo de FOR
	//imprima("Segunda versão do programa fatorial. Digite um número:");
	//fat := leia();
	res := 1;
	para (x de res até 1 passo -0.5) faça
		fat := fat * 10.0;
	fim-para
	//imprima("fatorial de ",fat," é igual a ",res);

	// Exemplo de DO-WHILE
	//imprima("Terceira versão do programa fatorial. Digite um número:");
	//x := leia();
	res := 1;	
	faça 
		res := res*x;
		x := x - 1;
	enquanto (x > res); 
fim
