algoritmo idade2;

variáveis
	idade : inteiro;
	nome : literal;
	x : inteiro;
	res : inteiro;
	a,b:real;
fim-variáveis

início
	x := 10;
	res := 10;
	a:=10.10;
	b:=10.20;
	//imprima("Digite seu nome:");
	//imprima(nome, ", digite sua idade:");
	idade := 10;
	se (idade >= 18 e idade < 10 e idade > 10) então
	  idade := 10;
	fim-se
	
	enquanto (x <> 10) faça
		res := res * x;
		x := x - 1;
	fim-enquanto
	
	enquanto (x <> 0) faça
		res := res*x;
		a := a + b;
	fim-enquanto
	
	faça 
		res := res*x;
		x := x - 1;
	enquanto (x > verdadeiro); 	
	
