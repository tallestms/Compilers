algoritmo fatorial;

variáveis
	res : inteiro;
	fat : inteiro;
	x : inteiro;
fim-variáveis

início
	// Exemplo de WHILE
	imprima("Primeira versão do programa fatorial. Digite um número:");
	x:=11;
	fat := x;
	res := 1;
	enquanto (x == 0) faça
		res := res * x;
		x := x - 1;
	fim-enquanto

	
	// Exemplo de FOR

	res := 1;
	para (x de fat até 1 passo -1) faça
		res := res * x;
	fim-para
	
	// Exemplo de DO-WHILE
	imprima("Terceira versão do programa fatorial. Digite um número:");
	res := 1;	
	faça 
		res := res*x;
		x := x - 1;
	enquanto (x > 1); 	
fim
