algoritmo fatorial;

variáveis
	res : inteiro;
	fat : inteiro;
	x : inteiro;
fim-variáveis

início
	// Exemplo de WHILE
	imprima("Primeira versão do programa fatorial. Digite um número:");
	x := leia();
	fat := x;
	res := 1;
	enquanto x <> 0 faça
		res := res * x;
		x := x - 1;
	fim-enquanto;
	imprima("fatorial de ",fat," é igual a ",res);
	
	// Exemplo de FOR
	imprima("Segunda versão do programa fatorial. Digite um número:");
	fat := leia();
	res := 1;
	para x de fat até 1 passo -1 faça
		res := res * x;
	fim-para
	imprima("fatorial de ",fat," é igual a ",res);

	// Exemplo de DO-WHILE
	imprima("Terceira versão do programa fatorial. Digite um número:");
	x := leia();
	res := 1;	
	faça 
		res := res*x;
		x := x - 1;
	enquanto x > 1; 	
	imprima("fatorial de ",fat," é igual a ",res);
fim
