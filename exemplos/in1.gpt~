algoritmo declaracao_de_variaveis;

função soma(a : inteiro):real
c,d: inteiro;
re : real;
início
re := 10.10;
c := 20;
a := 10 + c; //retornando c como nao declarado e não a
//ada := 20.5;
retorne re;
fim

função soma2(a:real, b:real):real
c,d: inteiro;
p: real;
início
d := 10;
c := 20;
p := 20.20;
retorne p;
fim

função soma3(a:inteiro)
c,d: inteiro;
p: real;
início
d := 10;
c := 20;
p := 20.20;
p := soma(d); //chamada de funcao dentro de outra funcao
fim

