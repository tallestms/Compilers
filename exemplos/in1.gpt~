algoritmo declaracao_de_variaveis;

variáveis
	a : inteiro;
	b : inteiro;
	c : real;
	d : real;
	f : real;
	g : real;
	char : caracter;
	lit : literal;
	z : lógico;
	mat : matriz[2] de inteiros; 
fim-variáveis

início
	a := 10;
	b := -10;
	c := 10.10;
	d := -10.10;
	f := 10.10e+10;
	g := -10.10e+10;
	char := 'c';
	lit := "isso daqui é um texto";
	z := verdadeiro;
	
	//soma((10*15),15 e 10);
	
	mat := {[1,2],[2,1]};
fim

