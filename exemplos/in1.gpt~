algoritmo declaracao_de_variaveis;

função soma(a:inteiro):inteiro
c,d: inteiro;
re : real;
início
re := 10.10;
a := 10 + c + re + ada;
c := 20;
ada := 20;
fim

função soma2(a:inteiro, b:inteiro):inteiro
c,d: inteiro;
início
d := 10;
fim

variáveis
	a : inteiro;
	c,d,f : real;
	g : real;
	char : caracter;
	lit : literal;
	z : lógico;
	//mat : matriz[2] de inteiros; 
fim-variáveis

início
	b := 20;
	a := 10 + 10;
	b := 20 + b;
	a := soma(a);
	c := 10.10;
	d := -10.10 + 10;
	adsad := 20 + adsad;
	d := funcao(f,g);
	f := (10.10e+10 - 10.10)*10.10 - 10;
	g := -10.10e+10;
	char := 'c';
	lit := "isso daqui é um texto";
	z := verdadeiro;
	z := a>b;
	//mat := {[1,2],[2,1]};
fim